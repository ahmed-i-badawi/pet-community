@{
//Model.PostId = ViewBag.Post.Id;
}
<div class="container">
    <div class="comment-form-wrap pt-5">
        <h3 class="mb-5">Leave a comment</h3>
        @using (Html.BeginForm("CreateComment", "HomePost", FormMethod.Post))
        {
            <div class="container">
                <div class="form-group row">
                    @Html.LabelFor(c => c.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                </div>
                <div class="form-group row">
                    @Html.LabelFor(c => c.Content, new { @class = "form-label", })
                    @Html.TextBoxFor(c => c.Content, new { @class = "form-control" })
                </div>
                <br />
            </div>

            <input type="hidden" asp-for="PostId" value="@ViewBag.Post.Id" />

            <button type="submit" class="btn bg-info">Create</button>
        }
    </div>
</div>


