@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>HomePost <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread">HomePost</h1>
            </div>
        </div>
    </div>
</section>


{


}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
            @foreach (var item in ViewBag.Post)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <a asp-action="Details" asp-route-id="@item.Id" class="block-20 rounded" style="background-image: url('../Uploads/@item.ImageUrl');">
                        </a>
                        <div class="text p-4">
                            <div class="meta mb-2">
                                <div><a href="#">@item.Date</a></div>
                                @*<div><a href="#">@item.User.FirstName</a></div>*@
                                <div><a href="#" class="meta-chat"><span class="fa fa-comment"></span>@item.Id</a></div>
                            </div>
                            <h3 class="heading"><a href="#">@item.Title</a></h3>
                            @*<a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-th-list" aria-hidden="true"></i></a>*@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
