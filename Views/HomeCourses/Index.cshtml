@model IEnumerable<PetCommunity.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a   asp-asp-controller="HomeCourse" asp-action="Create">
        <i class="fas fa-plus"></i>

       JOIN
    </a>
</p>

<section class="hero-wrap hero-wrap-2" style="background-image: url('../images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>HomeCourses <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-0 bread">HomeCourses</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="staff">
                        <div class="img-wrap d-flex align-items-stretch">
                            <a asp-action="Details" asp-route-id="@item.Id" class="img align-self-stretch" style="background-image: url('../Uploads/@item.ImageUrl');"></a>
                        </div>
                        <div class="text pt-3 px-3 pb-4 text-center">

                            <h3>@item.Title</h3>
                            <h3>@item.Specialization</h3>
                            <h3>@item.Source</h3>
                             <h3>@item.UploadTime</h3>
                              <h3>@item.Language</h3>
                               <h3>@item.IsPaid</h3>
                                <h3>DR:@item.Doctor.User.FullName</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


